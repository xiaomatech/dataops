<?xml version="1.0"?>
<metainfo>
    <schemaVersion>2.0</schemaVersion>
    <services>
        <service>
            <name>MYSQL</name>
            <displayName>MySQL</displayName>
            <comment>MySQL Server</comment>
            <version>5.7</version>
            <credential-store>
                <supported>true</supported>
                <enabled>true</enabled>
            </credential-store>
            <components>
                <component>
                    <name>MYSQL_SERVER</name>
                    <displayName>MySQL Server</displayName>
                    <category>SLAVE</category>
                    <cardinality>1+</cardinality>
                    <versionAdvertised>false</versionAdvertised>
                    <reassignAllowed>true</reassignAllowed>
                    <commandScript>
                        <script>scripts/mysql_server.py</script>
                        <scriptType>PYTHON</scriptType>
                    </commandScript>
                    <customCommands>
                        <customCommand>
                            <name>CLEAN</name>
                            <commandScript>
                                <script>scripts/mysql_server.py</script>
                                <scriptType>PYTHON</scriptType>
                                <timeout>600</timeout>
                            </commandScript>
                        </customCommand>
                    </customCommands>
                </component>

                <component>
                    <name>MYSQL_CLIENT</name>
                    <displayName>MySQL Client</displayName>
                    <category>CLIENT</category>
                    <cardinality>0+</cardinality>
                    <versionAdvertised>true</versionAdvertised>
                    <commandScript>
                        <script>scripts/mysql_client.py</script>
                        <scriptType>PYTHON</scriptType>
                    </commandScript>
                </component>

            </components>

            <osSpecifics>
                <osSpecific>
                    <osFamily>any</osFamily>
                    <packages>
                        <!--
                        <package>
                            <name>percona-server-tokudb</name>
                        </package>
                        -->
                        <package>
                            <name>percona-server-rocksdb</name>
                        </package>
                        <package>
                            <name>percona-server-server</name>
                        </package>
                        <package>
                            <name>gperftools-libs</name>
                        </package>
                        <package>
                            <name>mysql-connector-python</name>
                        </package>
                        <package>
                            <name>python2-PyMySQL</name>
                        </package>
                        <package>
                            <name>MySQL-python</name>
                        </package>
                        <package>
                            <name>jemalloc</name>
                        </package>
                        <package>
                            <name>snappy</name>
                        </package>
                        <package>
                            <name>lz4</name>
                        </package>
                        <package>
                            <name>clicktail</name>
                        </package>
                    </packages>
                </osSpecific>
            </osSpecifics>

            <commandScript>
                <script>scripts/service_check.py</script>
                <scriptType>PYTHON</scriptType>
                <timeout>300</timeout>
            </commandScript>

            <configuration-dependencies>
                <config-type>core-site</config-type>
            </configuration-dependencies>
        </service>
    </services>
</metainfo>
