<?xml version="1.0"?>
<metainfo>
    <schemaVersion>2.0</schemaVersion>
    <services>
        <service>
            <name>FLINK</name>
            <displayName>Flink</displayName>
            <comment>Apache Flink is a streaming dataflow engine that provides data distribution, communication, and fault tolerance for distributed computations over data streams.</comment>
            <version>1.7.2</version>
            <components>
                <component>
                    <name>FLINK_JOBMANAGER</name>
                    <displayName>Flink Jobmanager</displayName>
                    <category>MASTER</category>
                    <cardinality>0+</cardinality>
                    <commandScript>
                        <script>scripts/jobmanager.py</script>
                        <scriptType>PYTHON</scriptType>
                        <timeout>10000</timeout>
                    </commandScript>
                </component>
                <component>
                    <name>FLINK_HISTORYSERVER</name>
                    <displayName>Flink Historyserver</displayName>
                    <category>MASTER</category>
                    <cardinality>1</cardinality>
                    <commandScript>
                        <script>scripts/historyserver.py</script>
                        <scriptType>PYTHON</scriptType>
                        <timeout>10000</timeout>
                    </commandScript>
                </component>
                <component>
                    <name>FLINK_TASKMANAGER</name>
                    <displayName>Flink Taskmanager</displayName>
                    <category>SLAVE</category>
                    <cardinality>0+</cardinality>
                    <commandScript>
                        <script>scripts/taskmanager.py</script>
                        <scriptType>PYTHON</scriptType>
                        <timeout>10000</timeout>
                    </commandScript>
                </component>

                <component>
                    <name>FLINK_CLIENT</name>
                    <displayName>Flink Client</displayName>
                    <category>CLIENT</category>
                    <cardinality>1+</cardinality>
                    <commandScript>
                        <script>scripts/client.py</script>
                        <scriptType>PYTHON</scriptType>
                        <timeout>10000</timeout>
                    </commandScript>
                </component>

                <component>
                    <name>FLINK_STREAMSQL_CLIENT</name>
                    <displayName>Flink StreamSQL Client</displayName>
                    <category>CLIENT</category>
                    <cardinality>1+</cardinality>
                    <commandScript>
                        <script>scripts/streamsql_client.py</script>
                        <scriptType>PYTHON</scriptType>
                        <timeout>10000</timeout>
                    </commandScript>
                </component>
            </components>

            <quickLinksConfigurations>
                <quickLinksConfiguration>
                    <fileName>quicklinks.json</fileName>
                    <default>true</default>
                </quickLinksConfiguration>
            </quickLinksConfigurations>

      	    <configuration-dependencies>
	        	<config-type>flink-env</config-type>
      	    </configuration-dependencies>

            <restartRequiredAfterChange>false</restartRequiredAfterChange>
        </service>
    </services>
</metainfo>
