<?xml version="1.0"?>
<metainfo>
    <schemaVersion>2.0</schemaVersion>
    <services>
        <service>
            <name>MONGODB</name>
            <displayName>MongoDB</displayName>
            <comment>The intermediate database in your lambda stack</comment>
            <version>3.6</version>
            <components>
                <component>
                    <name>MONGODB</name>
                    <displayName>MONGODB</displayName>
                    <category>SLAVE</category>
                    <cardinality>3+</cardinality>
                    <commandScript>
                        <script>scripts/mongo_db.py</script>
                        <scriptType>PYTHON</scriptType>
                        <timeout>600</timeout>
                    </commandScript>
                </component>
                <component>
                    <name>MONGODC</name>
                    <displayName>MONGOD CONFIG</displayName>
                    <category>SLAVE</category>
                    <cardinality>3+</cardinality>
                    <commandScript>
                        <script>scripts/mongo_config.py</script>
                        <scriptType>PYTHON</scriptType>
                        <timeout>600</timeout>
                    </commandScript>
                </component>
                <component>
                    <name>MONGODS</name>
                    <displayName>MONGOS</displayName>
                    <category>SLAVE</category>
                    <cardinality>1+</cardinality>
                    <commandScript>
                        <script>scripts/mongos.py</script>
                        <scriptType>PYTHON</scriptType>
                        <timeout>600</timeout>
                    </commandScript>
                </component>
                <component>
                    <name>MONGODB_CLIENT</name>
                    <displayName>MongoDB Client</displayName>
                    <category>CLIENT</category>
                    <commandScript>
                        <script>scripts/mongo_client.py</script>
                        <scriptType>PYTHON</scriptType>
                        <timeout>600</timeout>
                    </commandScript>
                </component>

            </components>

            <osSpecifics>
                <osSpecific>
                    <osFamily>any</osFamily>
                    <packages>
                        <package>
                            <name>percona-server-mongodb</name>
                        </package>
                        <package>
                            <name>clicktail</name>
                        </package>
                    </packages>
                </osSpecific>
            </osSpecifics>

            <configuration-dependencies>
                <config-type>mongodb</config-type>
            </configuration-dependencies>

        </service>
    </services>
</metainfo>
