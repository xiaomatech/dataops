              "then": {
                "property_value_attributes": {
                  "visible": false
                }
              },
              "else": {
                "property_value_attributes": {
                  "visible": true
                }
              }
            }
          ]
        }
      ]
    },
    "widgets": [
      {
        "config": "registry-common/database_name",
        "widget": {
          "type": "text-field"
        }
      },
      {
        "config": "registry-common/registry.storage.type",
